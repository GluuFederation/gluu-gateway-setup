[Unit]
Description=Gluu-Gateway server daemon
After=network.target postgresql.service konga.service kong.service oxd-server.service
Requires=postgresql.service konga.service kong.service oxd-server.service

[Service]
Type=forking
ExecStart=/bin/bash -c ''
ExecStop=/bin/bash -c '/opt/oxd-server/bin/oxd-server.sh stop || /bin/kill -9 `cat /var/run/oxd-server.pid`'
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
